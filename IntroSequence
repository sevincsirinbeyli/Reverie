using UnityEngine;
using UnityEngine.SceneManagement;

public class IntroSequence : MonoBehaviour
{
    public CanvasGroup titleGroup;
    public float fadeDuration = 1.5f;
    public float holdDuration = 2f;

    private void Start()
    {
        StartCoroutine(RunIntro());
    }

    private System.Collections.IEnumerator RunIntro()
    {
        // Fade in
        yield return FadeCanvasGroup(titleGroup, 0f, 1f, fadeDuration);
        yield return new WaitForSeconds(holdDuration);
        // Fade out
        yield return FadeCanvasGroup(titleGroup, 1f, 0f, fadeDuration);

        // Intro bitti → GameAbout sahnesine geç
        SceneManager.LoadScene("GameAbout");
    }

    private System.Collections.IEnumerator FadeCanvasGroup(CanvasGroup group, float from, float to, float duration)
    {
        float t = 0f;
        group.alpha = from;

        while (t < duration)
        {
            t += Time.deltaTime;
            group.alpha = Mathf.Lerp(from, to, t / duration);
            yield return null;
        }

        group.alpha = to;
    }
}
